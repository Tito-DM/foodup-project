<h1 class = 'center'> register a user </h1>

<% if @user.errors.any?%>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg%></li>
    <%end%>
  </ul>
<%end%>

<div class= 'container'>

<%= form_for @user do |f|%>
<%= f.label :name%>
<%= f.text_field :name%>
<%= f.label :email%>
<%= f.email_field :email%>
<%= f.label :password%>
<%= f.password_field :password%>
<%= f.label :phone%>
<%= f.phone_field :phone%>
<%= f.submit :class => "btn green" %>
<%end%>

</div>