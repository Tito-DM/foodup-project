
<div class="container">
<h1 class="text-center">Your recipes</h1>

 <table class="table">
    <tr>
      <th>Name</th>
      <th>Origin</th>
      <th>create at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <%@user.recipes.each do |recipe| -%>
     <tr>
        <td><%= recipe.name%></td>
        <td><%= recipe.origin%></td>
        <td><%= recipe.created_at%></td>
        <td><%= link_to 'view' ,user_recipe_path(@user.id,recipe.id)%></td>
        <td> <%= link_to '<i class="material-icons text-danger">delete</i>'.html_safe,user_recipe_path(@user.id,recipe.id),method: :delete, data: {confirm: "are you sure?"}  %></td>
        <td><%= link_to '<i class="material-icons">edit</i>'.html_safe ,edit_user_recipe_path(@user.id,recipe.id)%></td>
      </tr>
    <%end-%>
  </table>
<%= link_to 'create a recipe', new_user_recipe_path(@user.id) , :class=>'btn btn-success btn-lg'%>

</div>


