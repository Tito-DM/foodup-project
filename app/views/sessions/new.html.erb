
<div class = "container">
<h1>Log In</h1>
<%= form_for :session, url: login_path do |f| %>
  <div class="form-group">
  <%= f.label :email %>
    <%= f.text_field :email, autofocus: true, :class=>"form-control", :id=>"exampleInputEmail1", :placeholder=>"Enter email"%>
    </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password,:class=>"form-control", :id=>"exampleInputEmail1",:placeholder=>"Password" %>
  </div>
  <%= f.submit "Sign In",  class: 'btn btn-success '%>
<% end %>
</div>


