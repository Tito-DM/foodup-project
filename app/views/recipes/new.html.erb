<h1 class = 'center'> Create new Recip </h1>

<% if @recipe.errors.any?%>
  <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg%></li>
    <%end%>
  </ul>
<%end%>

<div class= 'container'>
<%= form_for(@recipe, url: user_recipes_path(@user.id)) do |f|%>
<%= f.label :name%>
<%= f.text_field :name%>
<%= f.label :origin%>
<%= f.text_field :origin%>
<%= f.label :description%>
<%= f.text_area :description%>
<%= f.submit :class => "btn green" %>
<%end%>

</div>